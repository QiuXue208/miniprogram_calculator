/* pages/calculate/calculate.wxss */
/* 整体框架*/
page{
  height:100%;
}
.container{
  width:100%;
  height:100%;
  position:relative;
}
/* 显示框 */
.show-container{
  background:#b9b4b4;
  width:100%;
  height:266rpx;
  position: absolute;
  top:0;
  left:0;
  z-index:-1;
}
.show-container{
  -webkit-box-shadow: inset 0px 0px 10px 1px rgba(31,30,31,1);
  -moz-box-shadow: inset 0px 0px 10px 1px rgba(31,30,31,1);
  box-shadow: inset 0px 0px 10px 1px rgba(31,30,31,1);
}
.result-text,
.user-input{
  position:absolute;
  top:0;
  left:0;
  width:100%;
}
.user-input{
  top:35%;
  height:65%;
}
.user-input > input{
  height:100%;
  width:100%;
  font-size: 100rpx;
  text-indent: 8rpx;
  /* direction: rtl; */
  color:#3b3838;
}
.result-text{
  display: flex;
  align-items: center;
  /* flex-direction: row-reverse; */
  font-size:40rpx;
  height:35%;
  color:#5b5858;
}
/* 用户点击区域 */
.number-and-symbol{
  width:100%;
  position:absolute;
  left:0;
  top:266rpx;
}
.row-container{
  width:100%;
  display:flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.list{
  display:flex;
  align-items: center;
  justify-content: center;
  width:186rpx;
  height:186rpx;
  margin-top:2rpx;
  margin-right:2rpx;
}
.rowFiv > .list_0{
  width:374rpx;
}
/* 设置颜色 */
.row-container > .list{
	background:#0095CD;
}
.rowFir > .list{
  background:#FF8C00;
}
.row-container > .list_3{
  background:#FF8C00;
}
.rowFiv > .list_2{
  background:#FF8C00;
}
/* 点击时的颜色 */
.list:active{
  background-color:#ee2e2e;
}